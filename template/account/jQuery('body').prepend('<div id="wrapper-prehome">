function centerPrehome() {
var padding;
var heightWindow = jQuery(window).innerHeight();
var widthWindow = jQuery(window).innerWidth();
jQuery('#wrapper-prehome').css('width', widthWindow + 'px');
jQuery('#wrapper-prehome').css('height', heightWindow + 'px');

padding = ((heightWindow - jQuery("#prehome").height()) / 2);
jQuery("#prehome").css("margin-top", padding);
}

jQuery(window).resize(centerPrehome);

jQuery('#close-button, #wrapper-prehome').click(function() {
var intervalId = setInterval(function() {
opacity = opacity - 0.05;
jQuery('#wrapper-prehome').css('opacity', opacity + '');
jQuery('#wrapper-prehome').css('-moz-opacity', opacity + '');
jQuery('#wrapper-prehome').css('-khtml-opacity', opacity + '');
jQuery('#wrapper-prehome').css('-ms-filter', '"progid:DXImageTransform.Microsoft.Alpha"(Opacity=' + opacity + ')');
jQuery('#wrapper-prehome').css('filter', 'progid:DXImageTransform.Microsoft.Alpha(opacity=' + opacity + ')');
jQuery('#wrapper-prehome').css('filter', 'alpha(opacity=' + opacity + ')');
jQuery('#prehome').css('opacity', opacity + '');
jQuery('#prehome').css('-moz-opacity', opacity + '');
jQuery('#prehome').css('-khtml-opacity', opacity + '');
jQuery('#prehome').css('-ms-filter', '"progid:DXImageTransform.Microsoft.Alpha"(Opacity=' + opacity + ')');
jQuery('#prehome').css('filter', 'progid:DXImageTransform.Microsoft.Alpha(opacity=' + opacity + ')');
jQuery('#prehome').css('filter', 'alpha(opacity=' + opacity + ')');
if (opacity <= 0) {
jQuery('#prehome').css('display', 'none');
jQuery('#wrapper-prehome').css('display', 'none');
clearInterval(intervalId);
}
}, 50);
});

;
jQuery("#image-prehome").on("load", function() {
centerPrehome();
});
